
.content
  .content__top
    .content__top__box
      
      .content__top__box__top
        =@group.name
      .content__top__box__bottom
        Memberï¼š
        %ul
          - @group.users.each do |user|
            = user.name
    .content__top__edit
      = link_to edit_group_path(@group) do
        .content__top__edit__text
          Edit
  .messages
    = render @messages
  .content__bottom
    .content__bottom__form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'content__bottom__form__message', placeholder: 'type a message'
        .content__bottom__form__mask
          = f.label :image,class: "content__bottom__form__mask__label" do
            = icon('fas', 'image')
            = f.file_field :image,class:"content__bottom__form__mask__label__input"
        = f.submit "Send", class: 'content__bottom__form__submit'