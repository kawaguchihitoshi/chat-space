.messages
  = render @messages
.content
  .content__top
    .content__top__box
      
      .content__top__box__top
        =@group.name
      .content__top__box__bottom
        Memberï¼š
        %ul
          - @group.users.each do |user|
            %li= user.name
    .content__top__edit
      = link_to edit_group_path(@group) do
        .content__top__edit__text
          Edit
  .content__mid
    .content__mid__text
      .content__mid__text__names
        .content__mid__text__names___name
        aaaa
        .content__mid__text__names__days
        20200202
      .content__mid__text__messages
        aaaa
  .content__bottom
    .content__bottom__form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'content__bottom__form__message', placeholder: 'type a message'
        .content__bottom__form__mask
          %label{class: "content__bottom__form__mask__label"}
            = icon('fas', 'image')
            %input{type: "file",class:"content__bottom__form__mask__label__input"}
        = f.submit 'Send', class: 'content__bottom__form__submit'